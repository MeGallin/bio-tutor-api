# ========================================
# REQUIRED CONFIGURATION
# ========================================

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o
# Using text-embedding-3-large (3072 dimensions) for embeddings to match Pinecone indexes

# Pinecone Configuration (Required - Active Vector Storage)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_CONTENT_INDEX=biologycontent
PINECONE_EXAM_PAPERS_INDEX=biologyexampapers

# ========================================
# OPTIONAL CONFIGURATION (with defaults)
# ========================================

# Server Configuration (Optional)
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
SQLITE_DB_FILE=./memory.db

# LangSmith Configuration (Optional - for debugging/tracing)
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=biology-tutor

# ========================================
# CONTENT DIRECTORIES
# ========================================
# Directory paths for PDF documents
PDF_DIRECTORY=./pdfs
EXAM_PAPERS_DIRECTORY=./exam_papers